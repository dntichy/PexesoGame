<Page x:Class="Game.Pages.RegisterPlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPlayerPage"
      Background="AliceBlue"
      Loaded="OnPageLoaded">

    <Grid>
        <StackPanel>
            <Label FontSize="30">Welcome to Pexeso</Label>
            <StackPanel Orientation="Horizontal">
                <Label FontSize="20">Enter your nickname:</Label>
                <TextBox Margin="10,0,10,0" Name="NickNameTextBox" Width="100" />
                <Button Click="OnRegisterUserClicked">Register</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
